---
import { siteConfig } from "../config";
const hasHonors = siteConfig.honors && siteConfig.honors.length > 0;
---

{
  hasHonors && (
    <section id="honors" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
              <span aria-hidden="true" class="emoji">üèÜ</span> Honors
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-6">
              {siteConfig.honors.map((honor) => (
                <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-4 sm:p-5 hover:shadow-md transition-shadow duration-300">
                  <div class="flex items-start gap-3">
                    <div
                      class="flex-shrink-0 w-10 h-10 rounded-lg flex items-center justify-center"
                      style={`background-color: ${siteConfig.accentColor}15`}
                    >
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke={siteConfig.accentColor}
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      >
                        <path d="M6 9h6v13l-3 -3l-3 3z" />
                        <path d="M6 9a6 6 0 1 1 12 0" />
                        <path d="M18 9h-6" />
                      </svg>
                    </div>
                    <div class="flex-1 min-w-0">
                      <div class="flex items-start justify-between gap-2">
                        <h3 class="text-sm sm:text-base font-semibold text-gray-900 leading-tight">
                          {honor.title}
                        </h3>
                      </div>
                      <div class="flex items-center gap-2 mt-1">
                        <span
                          class="text-xs sm:text-sm font-medium"
                          style={`color: ${siteConfig.accentColor}`}
                        >
                          {honor.association}
                        </span>
                        <span class="text-gray-300">‚Ä¢</span>
                        <span class="text-xs sm:text-sm text-gray-500">
                          {honor.date}
                        </span>
                      </div>
                      {honor.description && (
                        <p class="mt-2 text-xs sm:text-sm text-gray-600">
                          {honor.description}
                        </p>
                      )}
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
