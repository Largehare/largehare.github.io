---
import { siteConfig } from "../config";
const hasReferees = siteConfig.referees && siteConfig.referees.length > 0;
---

{
  hasReferees && (
    <section id="referees" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900 leading-tight break-words">
              <span aria-hidden="true" class="emoji">ğŸ¤</span> Referees
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              {siteConfig.referees.map((referee) => (
                <div class="block p-4 sm:p-5 md:p-6 bg-gray-50 rounded-xl border border-gray-200 transition-all duration-300 hover:bg-white hover:shadow-lg hover:border-gray-300">
                  <div class="space-y-2">
                    <div class="flex items-center gap-3">
                      {referee.avatar && (
                        <img
                          src={referee.avatar}
                          alt={`${referee.name} avatar`}
                          class="h-12 w-12 rounded-full object-cover border border-gray-200"
                          loading="lazy"
                        />
                      )}
                      <h3 class="text-lg sm:text-xl font-semibold text-gray-900">
                        {referee.linkedin ? (
                          <a
                            href={referee.linkedin}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="hover:text-gray-900"
                          >
                            {referee.name}
                          </a>
                        ) : (
                          referee.name
                        )}
                      </h3>
                    </div>
                    <p class="text-sm sm:text-base text-gray-600">
                      {referee.affiliation}
                    </p>
                    <p class="text-sm sm:text-base text-gray-600">
                      <span class="font-medium text-gray-700">Email: </span>
                      <a
                        href={`mailto:${referee.email}`}
                        class="text-gray-700 underline decoration-gray-300 underline-offset-2 hover:text-gray-900"
                      >
                        {referee.email}
                      </a>
                    </p>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
