---
import { siteConfig } from "../config";
const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
---

{
  hasProjects && (
    <section id="projects" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
              Projects
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="space-y-8">
              {siteConfig.projects.map((project, index) => {
                return (
                  <div class="group relative">
                    <div
                      class="block relative p-4 sm:p-6 md:p-8 bg-gray-50 rounded-xl sm:rounded-2xl border border-gray-200 transition-all duration-300 group-hover:bg-white group-hover:shadow-xl group-hover:border-gray-300 group-hover:-translate-y-1"
                    >
                      <div class="space-y-4">
                        <div>
                          <span
                            class="text-sm font-mono"
                            style={{ color: siteConfig.accentColor }}
                          >
                            0{index + 1}
                          </span>
                          <h3 class="text-xl sm:text-2xl font-bold text-gray-900 mt-1">
                            {project.name}
                          </h3>
                        </div>

                        {project.description ? (
                          <div
                            class={`space-y-3 text-base sm:text-lg text-gray-600 leading-relaxed ${project.link ? "pr-12 sm:pr-14 md:pr-16" : ""}`}
                          >
                            {project.description.map((paragraph) => (
                              <p set:html={paragraph} />
                            ))}
                          </div>
                        ) : project.descriptionBullets ? (
                          <ul
                            class={`space-y-2 text-base sm:text-lg text-gray-600 leading-relaxed ${project.link ? "pr-12 sm:pr-14 md:pr-16" : ""}`}
                          >
                            {project.descriptionBullets.map((bullet) => (
                              <li class="flex items-start">
                                <span class="inline-block w-1.5 h-1.5 rounded-full bg-gray-400 mt-2 mr-3 flex-shrink-0" />
                                <span set:html={bullet} />
                              </li>
                            ))}
                          </ul>
                        ) : (
                          <p
                            class={`text-base sm:text-lg text-gray-600 leading-relaxed ${project.link ? "pr-12 sm:pr-14 md:pr-16" : ""}`}
                          >
                            {project.description}
                          </p>
                        )}

                        {project.skills && project.skills.length > 0 && (
                          <div class="flex flex-wrap gap-1.5 sm:gap-2 pt-2">
                            {project.skills.map((skill) => (
                              <span
                                class={`px-2.5 sm:px-3 py-1 sm:py-1.5 bg-gray-900 text-white rounded-md sm:rounded-lg text-xs sm:text-sm font-medium transition-all duration-300 ${
                                  project.link ? "group-hover:bg-gray-800" : ""
                                }`}
                              >
                                {skill}
                              </span>
                            ))}
                          </div>
                        )}
                        {project.images && project.images.length > 0 && (
                          <div class="mt-5 grid grid-cols-3 gap-3 sm:gap-4">
                            {project.images.slice(0, 3).map((img, imgIdx) => (
                              <button
                                type="button"
                                class="img-skeleton relative aspect-[4/3] overflow-hidden rounded-lg border border-gray-200 bg-gray-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-300"
                                aria-label={`${project.name} image ${imgIdx + 1}`}
                                data-lightbox-img={`/${img}`}
                              >
                                <img
                                  src={`/${img}`}
                                  alt={`${project.name} image ${imgIdx + 1}`}
                                  class="h-full w-full object-cover"
                                  loading="lazy"
                                />
                              </button>
                            ))}
                          </div>
                        )}

                        {project.link ? (
                          <div class="mt-4 flex justify-end">
                            <a
                              href={project.link}
                              target="_blank"
                              rel="noopener noreferrer"
                              class="inline-flex items-center gap-2 px-3 py-2 text-sm font-medium text-white bg-gray-900 rounded-lg transition-colors duration-200 hover:bg-gray-700"
                            >
                              <span>View</span>
                              <svg
                                class="w-4 h-4"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                              >
                                <path
                                  stroke-linecap="round"
                                  stroke-linejoin="round"
                                  stroke-width="2"
                                  d="M7 17L17 7M17 7H7M17 7V17"
                                />
                              </svg>
                            </a>
                          </div>
                        ) : (
                          <div class="mt-4 flex justify-end">
                            <span class="text-sm text-gray-500">{project.linkNote || siteConfig.linkUnavailableText}</span>
                          </div>
                        )}
                      </div>
                    </div>
                  </div>
                );
              })}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
